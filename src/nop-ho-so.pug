extends includes/layouts/Guest.pug

block pages
  .SubmitFilePage
    include includes/containers/ModalSubmitFileSuccess.pug

    +Banner({ image: './assets/images/image-banner-school-list.png', text: 'Nộp hồ sơ', height: '26.4rem' })

    .container
      form(action="#").SubmitFilePage-wrapper 
        .SubmitFilePage-step-header.flex.items-center.justify-between
          each item in [1,2,3]
            .SubmitFilePage-step-header-item.flex.items-center.justify-center= item

        .SubmitFilePage-step-body
          .SubmitFilePage-step-body-item
            h3.SubmitFilePage-title THông tin của bạn

            .SubmitFilePage-form
              .SubmitFilePage-form-control.flex.flex-wrap
                .SubmitFilePage-form-item
                  +Input({ placeholder: 'Tên của bạn', size: 'small', bordered: true })
                .SubmitFilePage-form-item
                  +Select({ placeholder: 'Quốc gia du học', size: 'small', bordered: true })
                .SubmitFilePage-form-item
                  +Input({ placeholder: 'Số điện thoại', size: 'small', bordered: true })
                .SubmitFilePage-form-item
                  +Select({ placeholder: 'Bậc học', size: 'small', bordered: true })
                .SubmitFilePage-form-item
                  +Input({ placeholder: 'Email', size: 'small', bordered: true })
                .SubmitFilePage-form-item
                  +Select({ placeholder: 'Ielts', size: 'small', bordered: true })

              .SubmitFilePage-form-submit.flex.justify-center
                +Button({ title: 'Tiếp theo', size: 'small', className: 'secondary', bordered: true })

          .SubmitFilePage-step-body-item
            h3.SubmitFilePage-title Hướng dẫn tự nộp hồ sơ

