          .SubmitFilePage-step-body-item
            each item in ['Upload file hồ sơ học thuật', 'Upload file hồ sơ cá nhân', 'Upload file hồ sơ tài chính']
              .Collapse.style-content.active
                .Collapse-header 
                  h4.Collapse-title= item
                .Collapse-icon 
                  img(src="./assets/icons/icon-angle-down.svg", alt="") 
                .Collapse-body 
                  .SubmitFilePage-upload-list.flex.flex-wrap
                    .SubmitFilePage-upload-list-item.upload.flex.flex-col.items-center.justify-center
                      input(type="file")
                      img(src="./assets/icons/icon-upload.svg", alt="")
                      |Upload file
                    
                    each item in [1,2,3,4,5,6]
                      .SubmitFilePage-upload-list-item
                        .SubmitFilePage-upload-list-item-image 
                          img(src="./assets/icons/icon-pdf.svg", alt="")
                        .SubmitFilePage-upload-list-item-info
                          h5.SubmitFilePage-upload-list-item-title Lorem Ipsum is simply dum.pdf
                          .SubmitFilePage-upload-list-item-delete.flex.items-center 
                            .SubmitFilePage-upload-list-item-delete-icon 
                              img(src="./assets/icons/icon-delete.svg", alt="")
                            |Xóa

            .SubmitFilePage-form-submit.flex.justify-center
              +Button({ title: 'Hoàn thành', size: 'small', className: 'secondary js-open-modal', bordered: true, dataModalId: '#ModalSubmitFileSuccess' })