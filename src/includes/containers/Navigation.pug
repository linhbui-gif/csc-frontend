nav.Navigation
  .Navigation-overlay 
  .container 
    .Navigation-wrapper.flex.items-center
      .Navigation-logo
          a(href="#")
            img(src="https://cscmobi.com/wp-content/uploads/2018/09/cscmobi-logo-header.png", width="200")
      .Navigation-close 
        img(src="./assets/icons/icon-x.svg" alt="")

      .Navigation-list.flex.items-center
        each item in dataNavigation 
          .Navigation-list-wrapper
            if (item.children &&  item.children.length > 0)
              span.Navigation-list-item= item.label

            else
              a(href=`${item.link}`).Navigation-list-item= item.label

            if (item.children &&  item.children.length > 0)
              .Navigation-list-children
                each child in item.children
                  a(href=`${child.link}`).Navigation-list-item= child.label
      .Navigation-action.flex
          li.Navigation-action-soicial
              a(href="#").Navigation-action-soicial-link
                 i.fa.fa-facebook
          li.Navigation-action-soicial
            a(href="#").Navigation-action-soicial-link
              i.fa.fa-search